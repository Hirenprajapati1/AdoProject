@model AdoProject.Models.EmployeeModel

@{
    ViewData["Title"] = "AddEmployees";
}
        <hr />
        <h1>AddEmployees</h1>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="AddEmployees">
                    <div class="form-group">
                        Name:
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        Employee Code:
                        <input asp-for="EmployeeCode" class="form-control" />
                        <span asp-validation-for="EmployeeCode" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        Salary:
                        <input asp-for="Salary" class="form-control" />
                        <span asp-validation-for="Salary" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        Designation:
                        <input asp-for="Designation" class="form-control" />
                        <span asp-validation-for="Designation" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>    
                @ViewBag.Msg
            </div>
        </div>

        <div>
            <a asp-action="GetEmployees">Back to List</a>
        </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
